+	index.html		\
+	topic.dat
+
+EXTRA_DIST = gnomecard.sgml topic.dat
+
+all: index.html
+
+index.html: gnomecard/index.html
+	-cp $(srcdir)/gnomecard/index.html .
+
+gnomecard/index.html: gnomecard.sgml
+	-(cd $(srcdir); db2html gnomecard.sgml) > /dev/null
+
+
